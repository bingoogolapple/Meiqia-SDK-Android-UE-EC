<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MQMatchMatch">

    <LinearLayout style="@style/MQMatchMatch.Vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_id"
            style="@style/MQMatchWrap"
            android:layout_margin="@dimen/mq_size_level4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_profile_id"
                style="@style/MQMatchWrap"
                android:hint="用户ID"
                android:inputType="number|text"
                android:singleLine="true"
                android:textSize="@dimen/mq_textSize_level2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_nickname"
            style="@style/MQMatchWrap"
            android:layout_margin="@dimen/mq_size_level4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_profile_nickname"
                style="@style/MQMatchWrap"
                android:hint="昵称"
                android:singleLine="true"
                android:textSize="@dimen/mq_textSize_level2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_tel"
            style="@style/MQMatchWrap"
            android:layout_margin="@dimen/mq_size_level4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_profile_tel"
                style="@style/MQMatchWrap"
                android:hint="手机"
                android:imeActionLabel="@string/done"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="@dimen/mq_textSize_level2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_profile_done"
            style="@style/MQMatchWrap"
            android:layout_margin="@dimen/mq_size_level4"
            android:background="@drawable/selector_primary"
            android:text="@string/done"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>